{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "version": "independent",
  "command": {
    "publish": {
      "npmClient": "npm",
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish %s",
      "registry": "https://npm.pkg.github.com"
    }
  },
  "packages": [
    "packages/*"
  ]
}
